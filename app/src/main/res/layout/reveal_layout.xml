<?xml version="1.0" encoding="utf-8"?>
<com.matteolobello.mapapers.view.RevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/revealLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/revealTargetLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alpha="0"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/processing"
                android:textColor="@color/text_color"
                android:textSize="26sp" />

            <com.github.rahatarmanahmed.cpv.CircularProgressView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                app:cpv_animAutostart="true"
                app:cpv_color="@android:color/black"
                app:cpv_indeterminate="true" />

        </LinearLayout>

    </FrameLayout>

</com.matteolobello.mapapers.view.RevealLayout>